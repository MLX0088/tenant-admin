<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.tenant.system.mapper.AttachmentMapper">
    
    <resultMap type="Attachment" id="AttachmentResult">
        <result property="id"    column="id"    />
        <result property="name"    column="name"    />
        <result property="newName"    column="new_name"    />
        <result property="type"    column="type"    />
        <result property="path"    column="path"    />
        <result property="size"    column="size"    />
        <result property="remark"    column="remark"    />
        <result property="createBy"    column="createBy"    />
        <result property="createTime"    column="createTime"    />
        <result property="updateBy"    column="updateBy"    />
        <result property="updateTime"    column="updateTime"    />
        <result property="fsId"    column="fsId"    />
    </resultMap>

    <sql id="selectAttachmentVo">
        select *  from attachment
    </sql>

    <select id="selectAttachmentList" parameterType="Attachment" resultMap="AttachmentResult">
        <include refid="selectAttachmentVo"/>
        <where>  
            <if test="name != null  and name != ''"> and name like concat('%', #{name}, '%')</if>
            <if test="newName != null  and newName != ''"> and new_name like concat('%', #{newName}, '%')</if>
            <if test="type != null  and type != ''"> and type = #{type}</if>
            <if test="path != null  and path != ''"> and path = #{path}</if>
            <if test="size != null "> and size = #{size}</if>
            <if test="createBy != null  and createBy != ''"> and createBy = #{createBy}</if>
            <if test="createTime != null "> and createTime = #{createTime}</if>
            <if test="updateBy != null  and updateBy != ''"> and updateBy = #{updateBy}</if>
            <if test="updateTime != null "> and updateTime = #{updateTime}</if>
        </where>
        order  by  createTime desc
    </select>
    
    <select id="selectAttachmentById" parameterType="String" resultMap="AttachmentResult">
        <include refid="selectAttachmentVo"/>
        where id = #{id}
    </select>
        
    <insert id="insertAttachment" parameterType="Attachment" useGeneratedKeys="true" keyProperty="id">
        insert into attachment
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="id != null and id != ''">id,</if>
            <if test="name != null">name,</if>
            <if test="newName != null">new_name,</if>
            <if test="type != null">type,</if>
            <if test="path != null">path,</if>
            <if test="size != null">size,</if>
            <if test="remark != null">remark,</if>
            <if test="createBy != null">createBy,</if>
            <if test="createTime != null">createTime,</if>
            <if test="updateBy != null">updateBy,</if>
            <if test="updateTime != null">updateTime,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="id != null and id != ''">#{id},</if>
            <if test="name != null">#{name},</if>
            <if test="newName != null">#{newName},</if>
            <if test="type != null">#{type},</if>
            <if test="path != null">#{path},</if>
            <if test="size != null">#{size},</if>
            <if test="remark != null">#{remark},</if>
            <if test="createBy != null">#{createBy},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateBy != null">#{updateBy},</if>
            <if test="updateTime != null">#{updateTime},</if>
         </trim>
    </insert>

    <update id="updateAttachment" parameterType="Attachment">
        update attachment
        <trim prefix="SET" suffixOverrides=",">
            <if test="name != null">name = #{name},</if>
            <if test="newName != null">new_name = #{newName},</if>
            <if test="type != null">type = #{type},</if>
            <if test="path != null">path = #{path},</if>
            <if test="size != null">size = #{size},</if>
            <if test="remark != null">remark = #{remark},</if>
            <if test="createBy != null">createBy = #{createBy},</if>
            <if test="createTime != null">createTime = #{createTime},</if>
            <if test="updateBy != null">updateBy = #{updateBy},</if>
            <if test="updateTime != null">updateTime = #{updateTime},</if>
            <if test="fsId != null">fsId = #{fsId},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteAttachmentById" parameterType="String">
        delete from attachment where id = #{id}
    </delete>

    <delete id="deleteAttachmentByIds" parameterType="String">
        delete from attachment where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>

</mapper>
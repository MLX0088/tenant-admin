<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.tenant.business.mapper.TbImagesMapper">
    
    <resultMap type="TbImages" id="TbImagesResult">
        <result property="id"    column="id"    />
        <result property="imageData"    column="image_data"    />
        <result property="delFlag"    column="del_flag"    />
        <result property="createBy"    column="create_by"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateBy"    column="update_by"    />
        <result property="updateTime"    column="update_time"    />
        <result property="remark"    column="remark"    />
        <result property="tenantId"    column="tenant_id"    />
        <result property="isHead"    column="is_head"    />
        <result property="url"    column="url"    />
        <result property="userId"    column="user_id"    />
    </resultMap>

    <sql id="selectTbImagesVo">
        select * from tb_images
    </sql>

    <sql id="selectTbImagesVoWithoutData">
        select id,create_by,create_time,tenant_id,is_head from tb_images
    </sql>

    <select id="selectTbImagesList" parameterType="TbImages" resultMap="TbImagesResult">
        <include refid="selectTbImagesVoWithoutData"/>
        <where>  
            <if test="tenantId != null "> and tenant_id = #{tenantId}</if>
            <if test="isHead != null "> and is_head = #{isHead}</if>
        </where>
    </select>
    
    <select id="selectTbImagesById" parameterType="Long" resultMap="TbImagesResult">
        <include refid="selectTbImagesVo"/>
        where id = #{id}
    </select>
        
    <insert id="insertTbImages" parameterType="TbImages" useGeneratedKeys="true" keyProperty="id">
        insert into tb_images
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="delFlag != null">del_flag,</if>
            <if test="createBy != null">create_by,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateBy != null">update_by,</if>
            <if test="updateTime != null">update_time,</if>
            <if test="remark != null">remark,</if>
            <if test="tenantId != null">tenant_id,</if>
            <if test="isHead != null">is_head,</if>
            <if test="url != null">url,</if>
            <if test="userId != null">user_id,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="imageData != null">#{imageData},</if>
            <if test="delFlag != null">#{delFlag},</if>
            <if test="createBy != null">#{createBy},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateBy != null">#{updateBy},</if>
            <if test="updateTime != null">#{updateTime},</if>
            <if test="remark != null">#{remark},</if>
            <if test="tenantId != null">#{tenantId},</if>
            <if test="isHead != null">#{isHead},</if>
            <if test="url != null">#{url},</if>
            <if test="userId != null">#{userId},</if>
         </trim>
    </insert>

    <update id="updateTbImages" parameterType="TbImages">
        update tb_images
        <trim prefix="SET" suffixOverrides=",">
            <if test="imageData != null">image_data = #{imageData},</if>
            <if test="delFlag != null">del_flag = #{delFlag},</if>
            <if test="createBy != null">create_by = #{createBy},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="updateBy != null">update_by = #{updateBy},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
            <if test="remark != null">remark = #{remark},</if>
            <if test="tenantId != null">tenant_id = #{tenantId},</if>
            <if test="isHead != null">is_head = #{isHead},</if>
            <if test="url != null">url = #{url},</if>
        </trim>
        where id = #{id}
        <if test="createBy != null  and createBy != ''"> and create_by = #{createBy}</if>
    </update>

    <delete id="deleteTbImagesById" parameterType="Long">
        delete from tb_images where id = #{id}
    </delete>

    <delete id="deleteTbImagesByIds" parameterType="String">
        delete from tb_images where
        <if test="createBy != null and createBy != ''">  create_by = #{createBy} and</if>
id in
        <foreach item="id" collection="ids" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>

</mapper>
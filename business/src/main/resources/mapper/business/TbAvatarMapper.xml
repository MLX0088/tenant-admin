<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.tenant.business.mapper.TbAvatarMapper">
    
    <resultMap type="TbAvatar" id="TbAvatarResult">
        <result property="id"    column="id"    />
        <result property="headImagesId"    column="head_images_id"    />
        <result property="delFlag"    column="del_flag"    />
        <result property="createBy"    column="create_by"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateBy"    column="update_by"    />
        <result property="updateTime"    column="update_time"    />
        <result property="remark"    column="remark"    />
        <result property="tenantId"    column="tenant_id"    />
        <result property="refCount"    column="refCount"    />
    </resultMap>

    <sql id="selectTbAvatarVo">
        select *,(select count(1) from sys_user u where u.head_image_id = head_images_id and u.dept_id = tenant_id) refCount from tb_avatar
    </sql>

    <select id="selectTbAvatarList" parameterType="TbAvatar" resultMap="TbAvatarResult">
        <include refid="selectTbAvatarVo"/>
        <where>  
            <if test="id != null "> and id = #{id}</if>
            <if test="params.beginCreateTime != null and params.beginCreateTime != '' and params.endCreateTime != null and params.endCreateTime != ''"> and create_time between #{params.beginCreateTime} and #{params.endCreateTime}</if>
            <if test="tenantId != null "> and tenant_id = #{tenantId}</if>
            <if test="headImagesId != null "> and head_images_id = #{headImagesId}</if>
        </where>
    </select>
    
    <select id="selectTbAvatarById" parameterType="Long" resultMap="TbAvatarResult">
        <include refid="selectTbAvatarVo"/>
        where id = #{id}
    </select>


    <select id="getRandomIdForTenant" parameterType="Long" resultType="Long">
        select head_images_id from tb_avatar where id in (
            SELECT min(id) FROM  tb_avatar
            WHERE tenant_id=#{tenantId} AND id >= (
            SELECT FLOOR(RAND() * (MAX(id)-MIN(id)) + MIN(id))
            FROM tb_avatar
            WHERE tenant_id=#{tenantId}
            )
        );
    </select>
        
    <insert id="insertTbAvatar" parameterType="TbAvatar" useGeneratedKeys="true" keyProperty="id">
        insert into tb_avatar
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="headImagesId != null">head_images_id,</if>
            <if test="delFlag != null">del_flag,</if>
            <if test="createBy != null">create_by,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateBy != null">update_by,</if>
            <if test="updateTime != null">update_time,</if>
            <if test="remark != null">remark,</if>
            <if test="tenantId != null">tenant_id,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="headImagesId != null">#{headImagesId},</if>
            <if test="delFlag != null">#{delFlag},</if>
            <if test="createBy != null">#{createBy},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateBy != null">#{updateBy},</if>
            <if test="updateTime != null">#{updateTime},</if>
            <if test="remark != null">#{remark},</if>
            <if test="tenantId != null">#{tenantId},</if>
         </trim>
    </insert>

    <update id="updateTbAvatar" parameterType="TbAvatar">
        update tb_avatar
        <trim prefix="SET" suffixOverrides=",">
            <if test="headImagesId != null">head_images_id = #{headImagesId},</if>
            <if test="delFlag != null">del_flag = #{delFlag},</if>
            <if test="createBy != null">create_by = #{createBy},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="updateBy != null">update_by = #{updateBy},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
            <if test="remark != null">remark = #{remark},</if>
            <if test="tenantId != null">tenant_id = #{tenantId},</if>
        </trim>
        where id = #{id}
        <if test="createBy != null  and createBy != ''"> and create_by = #{createBy}</if>
    </update>

    <delete id="deleteTbAvatarById" parameterType="Long">
        delete from tb_avatar where id = #{id}
    </delete>

    <delete id="deleteTbAvatarByIds" parameterType="String">
        delete from tb_avatar where
        <if test="createBy != null and createBy != ''">  create_by = #{createBy} and</if>
id in
        <foreach item="id" collection="ids" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>

</mapper>
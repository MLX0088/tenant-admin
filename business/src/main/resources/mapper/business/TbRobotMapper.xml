<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.tenant.business.mapper.TbRobotMapper">
    
    <resultMap type="TbRobot" id="TbRobotResult">
        <result property="id"    column="id"    />
        <result property="avatarId"    column="avatar_id"    />
        <result property="name"    column="name"    />
        <result property="roomName"    column="room_name"    />
        <result property="leftScore"    column="left_score"    />
        <result property="starttime"    column="starttime"    />
        <result property="endtime"    column="endtime"    />
        <result property="status"    column="status"    />
        <result property="addScoreRule"    column="add_score_rule"    />
        <result property="addScore"    column="add_score"    />
        <result property="minusScoreRule"    column="minus_score_rule"    />
        <result property="minusScore"    column="minus_score"    />
        <result property="grade"    column="grade"    />
        <result property="delFlag"    column="del_flag"    />
        <result property="createBy"    column="create_by"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateBy"    column="update_by"    />
        <result property="updateTime"    column="update_time"    />
        <result property="remark"    column="remark"    />
        <result property="tenantId"    column="tenant_id"    />
        <result property="refCount"    column="refCount"    />
        <result property="refManualCount"    column="refManualCount"    />
        <result property="lastBettingTime"    column="lastBettingTime"    />
    </resultMap>

    <sql id="selectTbRobotVo">
        select *,(select count(1) from tb_rebot_score_record r where r.robot_id = id and r.type=0) refCount,(select count(1) from tb_rebot_score_record r where r.robot_id = id and r.type=1) refManualCount from tb_robot
    </sql>



    <select id="selectRobotForScoreFilter" resultMap="TbRobotResult">
        select *
        from tb_robot
        where del_flag = '0' and status='0' and (left_score>1 or lastBettingTime>=DATE_SUB(NOW(), INTERVAL #{min} MINUTE))
    </select>

    <select id="selectTbRobotList" parameterType="TbRobot" resultMap="TbRobotResult">
        <include refid="selectTbRobotVo"/>
        <where>  
            <if test="id != null "> and id = #{id}</if>
            <if test="roomName != null  and roomName != ''"> and room_name like concat('%', #{roomName}, '%')</if>
            <if test="tenantId != null "> and tenant_id = #{tenantId}</if>
        </where>
    </select>
    
    <select id="selectTbRobotById" parameterType="Long" resultMap="TbRobotResult">
        select * from tb_robot
        where id = #{id}
    </select>
        
    <insert id="insertTbRobot" parameterType="TbRobot" useGeneratedKeys="true" keyProperty="id">
        insert into tb_robot
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="avatarId != null">avatar_id,</if>
            <if test="name != null">name,</if>
            <if test="roomName != null">room_name,</if>
            <if test="leftScore != null">left_score,</if>
            <if test="starttime != null">starttime,</if>
            <if test="endtime != null">endtime,</if>
            <if test="status != null">status,</if>
            <if test="addScoreRule != null">add_score_rule,</if>
            <if test="addScore != null">add_score,</if>
            <if test="minusScoreRule != null">minus_score_rule,</if>
            <if test="minusScore != null">minus_score,</if>
            <if test="grade != null">grade,</if>
            <if test="delFlag != null">del_flag,</if>
            <if test="createBy != null">create_by,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateBy != null">update_by,</if>
            <if test="updateTime != null">update_time,</if>
            <if test="remark != null">remark,</if>
            <if test="tenantId != null">tenant_id,</if>
            <if test="lastBettingTime != null">lastBettingTime,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="avatarId != null">#{avatarId},</if>
            <if test="name != null">#{name},</if>
            <if test="roomName != null">#{roomName},</if>
            <if test="leftScore != null">#{leftScore},</if>
            <if test="starttime != null">#{starttime},</if>
            <if test="endtime != null">#{endtime},</if>
            <if test="status != null">#{status},</if>
            <if test="addScoreRule != null">#{addScoreRule},</if>
            <if test="addScore != null">#{addScore},</if>
            <if test="minusScoreRule != null">#{minusScoreRule},</if>
            <if test="minusScore != null">#{minusScore},</if>
            <if test="grade != null">#{grade},</if>
            <if test="delFlag != null">#{delFlag},</if>
            <if test="createBy != null">#{createBy},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateBy != null">#{updateBy},</if>
            <if test="updateTime != null">#{updateTime},</if>
            <if test="remark != null">#{remark},</if>
            <if test="tenantId != null">#{tenantId},</if>
            <if test="lastBettingTime != null">#{lastBettingTime},</if>
         </trim>
    </insert>

    <update id="updateTbRobot" parameterType="TbRobot">
        update tb_robot
        <trim prefix="SET" suffixOverrides=",">
            <if test="avatarId != null">avatar_id = #{avatarId},</if>
            <if test="name != null">name = #{name},</if>
            <if test="roomName != null">room_name = #{roomName},</if>
            <if test="leftScore != null">left_score = #{leftScore},</if>
            <if test="starttime != null">starttime = #{starttime},</if>
            <if test="endtime != null">endtime = #{endtime},</if>
            <if test="status != null">status = #{status},</if>
            <if test="addScoreRule != null">add_score_rule = #{addScoreRule},</if>
            <if test="addScore != null">add_score = #{addScore},</if>
            <if test="minusScoreRule != null">minus_score_rule = #{minusScoreRule},</if>
            <if test="minusScore != null">minus_score = #{minusScore},</if>
            <if test="grade != null">grade = #{grade},</if>
            <if test="delFlag != null">del_flag = #{delFlag},</if>
            <if test="createBy != null">create_by = #{createBy},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="updateBy != null">update_by = #{updateBy},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
            <if test="remark != null">remark = #{remark},</if>
            <if test="tenantId != null">tenant_id = #{tenantId},</if>
            <if test="lastBettingTime != null">lastBettingTime = #{lastBettingTime},</if>
        </trim>
        where id = #{id}
        <if test="createBy != null  and createBy != ''"> and create_by = #{createBy}</if>
    </update>

    <delete id="deleteTbRobotById" parameterType="Long">
        delete from tb_robot where id = #{id}
    </delete>

    <delete id="deleteTbRobotByTenantId" parameterType="Long">
        delete from tb_robot where tenant_id = #{id}
    </delete>

    <delete id="deleteTbRobotByIds" parameterType="String">
        delete from tb_robot where
        <if test="createBy != null and createBy != ''">  create_by = #{createBy} and</if>
id in
        <foreach item="id" collection="ids" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>

</mapper>